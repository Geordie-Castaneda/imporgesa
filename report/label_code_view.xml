<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="label_code_view">

          <t t-call="web.html_container">
              <t t-if="dicc_products">
                <t t-foreach="dicc_products" t-as="llave">
                    <div class="page">
                      <style>
                        table {
                          margin-bottom: 0px;
                          margin-top: 0px;
                          <!-- height:75px; -->
                          width:100%;
                          align:center;
                        }
                        .centered {
                          <!-- position: absolute; /* or absolute */ -->
                          top: 5%;
                          left: 5%;
                        }
                      </style>
                        <!-- Etiqueta sin precio  -->
                            <table style="margin-top:0.12mm" class="centered">

                                <tr>
                                  <td align="center">
                                      <font  style="font-size: 12px; bold:True"><span t-esc="dicc_products[llave]['codigo']"/></font>
                                  </td>
                                </tr>
                                <tr>
                                  <td align="center">
                                      <font style="font-size: 10px"><span t-esc="dicc_products[llave]['descripcion']" style="align:center"/></font>
                                  </td>
                                </tr>
                                <tr>
                                  <td align="center" >
                                    <!-- style="width:50px; height:50px" -->
                                      <div  t-esc="dicc_products[llave]['codigo_barras']" t-options="{'widget': 'barcode','width': 600, 'height': 150, 'img_style': 'width:70px;height:20px;'}"/>
                                  </td>
                                </tr>

                            </table>

                    </div>
                </t>
              </t>
          </t>

        </template>

    </data>
</odoo>
